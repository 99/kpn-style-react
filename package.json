{
  "name": "@kpn-style/react",
  "version": "0.17.0",
  "description": "ui React components for kpn-styles",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "start": "start-storybook -p 9009",
    "build": "nwb build-react-component --copy-files",
    "clean": "yarn clean:clean-module && yarn clean:node_modules && yarn clean:storybook-static",
    "clean:clean-module": "nwb clean-module",
    "clean:node_modules": "rm -rf node_modules",
    "clean:storybook-static": "rm -rf storybook-static",
    "build-storybook": "build-storybook",
    "rebuild": "yarn run clean && yarn install && yarn run build",
    "storybook": "start-storybook -p 6006",
    "gh-deploy": "gh-pages -d storybook-static",
    "prettier": "prettier --write \"src/**/*.js\" --write \"stories/**/*.js\"",
    "changelog": "standard-changelog",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint src/"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "js,scss"
    }
  },
  "dependencies": {
    "classnames": "^2.2.5"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@kpn-style/bundle": "^1.15.0",
    "@storybook/addon-actions": "^5.3.0-alpha.9",
    "@storybook/addon-docs": "^5.3.0-alpha.9",
    "@storybook/addon-knobs": "^5.3.0-alpha.9",
    "@storybook/addon-links": "^5.3.0-alpha.9",
    "@storybook/addon-storysource": "^5.2.1",
    "@storybook/addons": "^5.3.0-alpha.9",
    "@storybook/react": "^5.3.0-alpha.9",
    "@storybook/source-loader": "^5.3.0-alpha.9",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "babel-loader": "^8.0.6",
    "conventional-changelog-conventionalcommits": "^4.2.3",
    "css-loader": "^3.2.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass-chokidar": "^1.4.0",
    "npm-run-all": "^4.1.3",
    "nwb": "^0.23.x",
    "nwb-sass": "^0.9.0",
    "prettier": "1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.2.0",
    "sass-loader": "^8.0.0",
    "standard-changelog": "^2.0.18",
    "storybook-addon-jsx": "^7.1.13",
    "storybook-react-router": "^1.0.7",
    "webpack": "4.41.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "prettier --write \"src/**/*.js\" --write \"stories/**/*.js\"",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "author": "KPN",
  "homepage": "https://kpn.github.io/kpn-style-react",
  "license": "MIT",
  "repository": "https://github.com/kpn/kpn-style-react",
  "keywords": [
    "react-component",
    "kpn-style",
    "react",
    "component",
    "components",
    "ui"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
